button(options)

  focus-shadow()
    box-shadow 0 0 8px rgba(0,0,0,.18),0 8px 16px rgba(0,0,0,.36)

  default-shadow()
    box-shadow 0 2px 2px 0 rgba(0,0,0,$shadow-key-penumbra-opacity),
      0 3px 1px -2px rgba(0,0,0,$shadow-key-umbra-opacity),
      0 1px 5px 0 rgba(0,0,0,$shadow-ambient-shadow-opacity)

  $background-color = options.background-color || #f44336
  $color = options.color || #fff

  $width = options.width

  $ripple-name = options.ripple-name || ripple

  $shadow-key-umbra-opacity = .2
  $shadow-key-penumbra-opacity = .14
  $shadow-ambient-shadow-opacity = .12

  default-shadow()
  background-color $background-color
  border-radius 2px
  border-width 0
  box-sizing border-box
  color $color
  cursor pointer
  display block
  font-weight 500
  height 36px
  line-height 36px
  margin 0
  outline 0
  overflow hidden
  padding 0 16px
  position relative
  text-align center
  text-transform uppercase
  width $width if $width

  &:focus
    focus-shadow()

  if options.js

    .{$ripple-name}
      background rgba(0,0,0,.25)
      border-radius 100%
      pointer-events none
      position absolute
      transform scale(0)
      will-change opacity, transform
      z-index 5

    .{$ripple-name}.is-active
      animation $ripple-name .45s cubic-bezier(0,0,.2,1)

    @keyframes $ripple-name
      to
        opacity 0
        transform scale(1.5)
