{
  "name": "potamus",
  "version": "0.0.1",
  "description": "A lightweight and responsive setup of Material Design components writed in stylus",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint:js": "eslint components/**/*.js",
    "lint:styl": "stylint ./components/ -c .stylintrc",
    "build:js": "babel components -w -d bin",
    "build:styl": "stylus -w -u autoprefixer-stylus components/ -o bin"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thiamsantos/potamus.git"
  },
  "keywords": [
    "stylus",
    "material",
    "design",
    "components",
    "setup"
  ],
  "author": "Thiago Santos",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thiamsantos/potamus/issues"
  },
  "homepage": "https://github.com/thiamsantos/potamus#readme",
  "devDependencies": {
    "autoprefixer-stylus": "^0.9.4",
    "babel-cli": "^6.14.0",
    "babel-preset-es2015": "^6.14.0",
    "eslint": "^3.4.0",
    "stylint": "^1.5.6",
    "stylus": "^0.54.5"
  }
}
