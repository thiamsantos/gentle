{
  "name": "potamus",
  "version": "0.5.1",
  "description": "A lightweight and responsive setup of Material Design components written in stylus and vanilla js",
  "main": "index.js",
  "jsnext:main": "index.esnext.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thiamsantos/potamus.git"
  },
  "scripts": {
    "test": "tape -r babel-register test/unit/**/*.js",
    "coverage": "nyc npm test",
    "coveralls": "nyc npm test && nyc report --reporter=text-lcov | coveralls",
    "precommit": "npm test && npm run lint",
    "prepush": "npm test && npm run lint",
    "lint": "npm run lint:js && npm run lint:styl",
    "lint:js": "xo components/**/*.js test/**/*.js --no-semicolon --esnext --space --global=document --global=window --global=navigator",
    "lint:styl": "stylint ./components/ -c .stylintrc",
    "build": "rollup -c",
    "build:watch": "rollup -c -w",
    "ui-test:styl": "stylus -u ./index.js -u autoprefixer-stylus test/ui/main.styl -o test/ui/dist",
    "ui-test:styl:watch": "stylus -u ./index.js -u autoprefixer-stylus test/ui/main.styl -o test/ui/dist -w",
    "ui-test:js": "rollup -c test/ui/rollup.config.js",
    "ui-test:js:watch": "rollup -c test/ui/rollup.config.js -w",
    "serve": "browser-sync start -s \"test/ui\" -f \"test/ui/**/*\"",
    "watch": "run-p -cl build:watch serve test:watch ui-test:js:watch ui-test:styl:watch",
    "test:watch": "tape-watch -r babel-register test/unit/**/*.js -p faucet"
  },
  "keywords": [
    "stylus",
    "material",
    "design",
    "components"
  ],
  "author": "Thiago Santos",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thiamsantos/potamus/issues"
  },
  "homepage": "https://github.com/thiamsantos/potamus#readme",
  "devDependencies": {
    "autoprefixer-stylus": "^0.11.0",
    "babel-core": "^6.18.2",
    "babel-plugin-external-helpers": "^6.18.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-register": "^6.18.0",
    "browser-env": "^2.0.16",
    "browser-sync": "^2.18.2",
    "faucet": "0.0.1",
    "husky": "^0.11.9",
    "npm-run-all": "^3.1.1",
    "nyc": "^10.0.0",
    "rollup": "^0.36.4",
    "rollup-plugin-babel": "^2.6.1",
    "rollup-plugin-commonjs": "^5.0.5",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-watch": "^2.5.0",
    "stylint": "^1.5.7",
    "stylus": "^0.54.5",
    "tape": "^4.6.3",
    "tape-watch": "^2.2.4",
    "xo": "^0.17.1"
  },
  "directories": {
    "test": "test"
  }
}
