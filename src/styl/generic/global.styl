*
  border 0
  color inherit
  margin 0
  padding 0
  vertical-align baseline

  &
  &:before
  &:after
    box-sizing inherit
    font-family 'Roboto', sans-serif

html
  color $text-primary-color
  font-size 10px

  @media (min-width: 600px)
    font-size 10.5px

  @media (min-width: 900px)
    font-size 11px

body
  font-size 1.4rem
  line-height 1.8

h4
  font-size 1.8rem

h3
  font-size 2.2rem

h2
  font-size 2.6rem

h1
  font-size 3rem


code
  font-family 'Roboto Mono', monospace
  font-size 1.4rem
  overflow auto

pre
  background-color #f7f7f7
  border-radius 2px
  color rgba(0,0,0,.54)
  padding 1rem
  overflow auto
  margin 1rem 0
  max-width 100%

ul
  list-style-position inside

.center
  text-align center
